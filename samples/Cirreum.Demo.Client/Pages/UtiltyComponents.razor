<div class="container-fluid">
	<div class="row mt-5">
		<div class="col-lg-12">
			<div class="page-header">
				<h2 id="spinners">Progressbars / Spinners</h2>
			</div>
		</div>
	</div>
	<div class="row mb-3">
		<div class="d-flex flex-column align-items-center gap-4 w-50 p-3 border rounded radious-2">
			<span>Loading...</span>
			<Progress Indeterminate="true" Color="selectedSpinnerColor" />
		</div>
	</div>
	<div class="row d-flex flex-column">
		<div class="d-flex flex-column align-items-center gap-4 w-50 p-3 border rounded radious-2">
			<div class="text-center text@(selectedSpinnerColor.ToShortName())">@($"{determinateProgressValue}%")</div>
			<Progress Color="selectedSpinnerColor" Percentage="@determinateProgressValue" />
		</div>
		<input type="range"
			   @bind-value="@determinateProgressValue"
			   @bind-value:event="oninput"
			   min="0"
			   max="100"
			   class="form-range w-50"
			   name="customRange1"
			   id="customRange1">
	</div>
	<div class="row mb-3">
		<div class="col-auto">
			<fieldset>
				<legend class="mt-4">Spinner Options</legend>
				<div class="d-flex justify-content-start align-items-center gap-3">
					<div>
						<DropdownButton TItemType="BackgroundColor"
										SelectedValue="BackgroundColor.Primary"
										ButtonColor="ButtonColor.None"
										ButtonStyle="@($"color: {@SpinnerColor}")"
										ButtonOutlined="true"
										SelectedValueChanged="@OnSpinnerColorSelected">
							<TextTemplate>
								<i class="bi bi-palette me-1" style="color: @SpinnerColor" aria-hidden="true" />
								<span>@SpinnerColorName</span>
							</TextTemplate>
							<ChildContent>
								@foreach (var c in Enum.GetValues<BackgroundColor>()) {
									<DropdownItemButton Value="c">
										<InteractiveTemplate Context="colorContext">
