@page "/utility-components"

@inject IToastService Toastr

<AppPageTitle>Misc</AppPageTitle>

<p>* Framework: @RuntimeInformation.FrameworkDescription</p>
<p>* OS: @RuntimeInformation.OSDescription</p>
<p>* OS Architecture: @RuntimeInformation.OSArchitecture</p>
<p>* Runtime Identifier: @RuntimeInformation.RuntimeIdentifier</p>
<p>* Process Architecture: @RuntimeInformation.ProcessArchitecture</p>

<div class="row">
	<div class="col">
		<fieldset>
			<Switch @bind-Value="IsCollapsable" Label="Collapsable"></Switch>
			<Switch @bind-Value="ShowClipboard" Label="Include Clipboard"></Switch>
			<Switch @bind-Value="ShowFooter" Label="Show Footer"></Switch>
			<Switch @bind-Value="ShowFooterWhenCollapsed" Label="Show Footer When Collapsed" Disabled=@(!IsCollapsable)></Switch>
		</fieldset>
	</div>
</div>

<div class="row">
	<div class="col">
		<CollapseCard Title="Legal Description"
					  Collapsable="IsCollapsable"
					  ShowCopyButton="ShowClipboard"
					  ClipboardText="@clipboardText"
					  ShowFooter="ShowFooter"
					  ShowFooterWhenCollapsed="ShowFooterWhenCollapsed">
			<TitleTemplate>
				<div class="hstack gap-1">
					<i class="bi bi-list-ol"></i>
					<span>Legal Description 2</span>
					<CounterBadge Count="12" VerticalPosition="40" Class="text-body bg-secondary-subtle border border-secondary-subtle" />
				</div>
			</TitleTemplate>
			<ChildContent>
				<div class="d-flex mb-3">
					<span class="flex-fill fs-5">Found on Page: 1</span>
					<div class="align-self-end">
						<a class="btn btn-link btn-sm" @onclick="@(() => { })" @onclick:stopPropagation @onclick:preventDefault>
							<i class="bi bi-file-earmark-text" aria-hidden="true"></i> Hide Trace
						</a>
					</div>
				</div>
				<pre>@testMessage</pre>
				<pre class="language-json"><code class="language-json">@("{ sample: \"sample trace text\" }")</code></pre>
			</ChildContent>
			<FooterContent>
				<span>Hey, I'm inside a footer!</span>
			</FooterContent>
		</CollapseCard>
	</div>
</div>

<div class="row mt-3">
	<div class="col-12"><h4>File Selection</h4></div>
</div>
<div class="row">
	<div class="col-12">
		<div class="hstack gap-3">
			<Switch Label="Drop Zone?" Inline="true" @bind-Value="@UseDropZone" />
		</div>
		<FileSelector @ref="fileSelectorRef"
					  Id="my-file-uploader"
					  AnchorId="file-upload-anchor"
					  Multiple="true"
					  DragDropZoneVisible="@UseDropZone"
					  MaximumFileCount="4"
					  MaximumFileSize="@(10*1024*1024)"
					  Accept="image/*"
					  OnSelected="@HandleFileSelection"
					  OnSelectionFailed="@HandleFileSelectedFailed"
					  OnCanceled="@HandleFileCanceled"
					  Style="height: 300px;border: 1px dashed var(--bs-primary);">
			<label for="my-file-uploader">
				<i class="bi bi-upload" aria-hidden="true"></i>
			</label>

			<div>
				Drag files here you wish to upload,
				or <label for="my-file-uploader">browse</label>
				for them<span style="color: red;">*</span>.
				<br />
				<em>Maximum of 4 files allowed.</em>
			</div>

			<div>
				<br />
				<a href="#">Read more about our supported file formats.</a>
			</div>
		</FileSelector>
		<div class="hstack gap-3 mt-3">
			<button class="btn btn-sm btn-primary" type="button" id="file-upload-anchor">Select File(s)</button>
			<button class="btn btn-sm btn-info" type="button" disabled="@(selectedFiles.Count == 0)" @onclick="Clear">Upload</button>
			<button class="btn btn-sm btn-secondary" type="button" @onclick="Clear">Clear</button>
		</div>
	</div>
</div>
<div class="row mt-3">
	<div class="col-12">
		<h6>File(s) selected:</h6>
		<ul>
			@if (selectedFiles.Any()) {
				@foreach (var file in selectedFiles) {
					<li>
						<b>@file.Name</b> 🔹
						@($"{Decimal.Divide(file.Size, 1024):N} KB") 🔹
						@file.ContentType 🔹
						@file.LastModified.Humanize()
					</li>
				}
			} else {
				<li>No files selected...</li>
			}
		</ul>
	</div>
</div>


<div class="row mt-3">
	<div class="col-12"><h4>Multi-Selector</h4></div>
</div>
<div class="row">
	<div class="col-12">
		<MultipleSelector SourceItems="@sourceItems" Selected="@selectedItems" SelectedChanged="@OnSelectionChanged" />
	</div>
</div>

