<div class="row mt-4">
	<div class="col-12"><h4>Focus Trap</h4></div>
</div>
<div class="row">
	<div class="col-12">
		<fieldset>
			<div class="d-flex mb-4 gap-3">

				<div class="form-check form-switch">
					<input class="form-check-input"
						   type="checkbox"
						   value=""
						   id="activeFocus"
						   @bind="isFocusTrapActive" />
					<label class="form-check-label" for="activeFocus">Active</label>
				</div>
				<DropdownButton TItemType="DefaultFocusType"
								Text="@($"{ActiveFocusType}")"
