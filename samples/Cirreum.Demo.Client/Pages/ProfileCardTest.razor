@page "/profile-card-test"

<PageTitle>Profile Card Test</PageTitle>

<div class="container mt-4">
	<h3>Profile Card Text Overflow Tests</h3>

	<div class="row g-4 mt-2">
		<div class="col-lg-4">
			<div class="card">
				<div class="card-header">Normal Length Text</div>
				<div class="dropdown-menu show position-static">
					<UserProfileCard Name="John Doe"
									 Email="john.doe@example.com"
									 Company="Acme Corp"
									 JobTitle="Developer"
									 Status="@PresenceStatus.Available"
									 StatusTitle="Available"
									 ProfilePicUrl="@GlenBantaAvatar" />
				</div>
			</div>
		</div>

		<div class="col-lg-4">
			<div class="card">
				<div class="card-header">Long Text (All Fields)</div>
				<div class="dropdown-menu show position-static">
					<UserProfileCard Name="Johnathan Maximilian Bartholomew Doe III"
									 Email="johnathan.maximilian.bartholomew.doe@verylongcompanyname.example.com"
									 Company="Acme International Corporation of Technology Solutions"
									 JobTitle="Senior Principal Staff Software Development Engineer"
									 Status="@PresenceStatus.Busy"
									 StatusTitle="In a very important meeting with stakeholders"
									 ProfilePicUrl="@SampleAvatar2" />
				</div>
			</div>
		</div>

		<div class="col-lg-4">
			<div class="card">
				<div class="card-header">No Profile Picture</div>
				<div class="dropdown-menu show position-static">
					<UserProfileCard Name="Jane Smith with a moderately long name"
									 Email="jane.smith@longdomainname.organization"
									 Company="Tech Innovations Ltd"
									 JobTitle="CTO"
									 Status="@PresenceStatus.Away"
									 StatusTitle="Away - Back in 15 minutes for the next call"
									 ProfileUrl="/profile/edit" />
				</div>
			</div>
		</div>
	</div>

	<div class="row g-4 mt-2">
		<div class="col-lg-4">
			<div class="card">
				<div class="card-header">Dark Theme</div>
				<div class="dropdown-menu show position-static" data-bs-theme="dark">
					<UserProfileCard Name="Dark Theme User with Long Name Test"
									 Email="darktheme@verylongemaildomain.test"
									 Company="Night Mode Industries International"
									 JobTitle="UI/UX Designer"
									 Status="@PresenceStatus.DoNotDisturb"
									 StatusTitle="Do not disturb - Working on important deadline"
									 ProfilePicUrl="@SampleAvatar4" />
				</div>
			</div>
		</div>

		<div class="col-lg-4">
			<div class="card">
				<div class="card-header">Guest Icon (Explicit)</div>
				<div class="dropdown-menu show position-static">
					<UserProfileCard Name="Guest User"
									 Email="guest@example.com"
									 Company="Visitor"
									 JobTitle="External"
									 Status="@PresenceStatus.Unknown"
									 StatusTitle="Guest"
									 ProfilePicUrl="@GuestIconUrl" />
				</div>
			</div>
		</div>

		<div class="col-lg-4">
			<div class="card">
				<div class="card-header">Guest Icon Dark (Explicit)</div>
				<div class="dropdown-menu show position-static" data-bs-theme="dark">
					<UserProfileCard Name="Another Guest"
									 Email="another.guest@example.com"
									 Status="@PresenceStatus.Unknown"
									 ProfilePicUrl="@GuestIconUrl" />
				</div>
			</div>
		</div>
	</div>
</div>

