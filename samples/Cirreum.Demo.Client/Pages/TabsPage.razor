<div class="fluid-container">

	<div class="bs-docs-section clearfix">

		<div class="row">
			<div class="col-lg-12">
				<div class="page-header">
					<h3 id="tabsDefault">Rendering Mode: <code>@($"{TabRenderModeState.TabsRenderMode.ToString()}")</code></h3>
					<DropdownButton TItemType="TabsRenderMode"
									IsDropMenu="false"
									@bind-SelectedValue:get="@TabRenderModeState.TabsRenderMode"
									@bind-SelectedValue:set="@TabRenderModeState.SetTabsRenderMode"
									AriaLabel="Tab Rendering Modes"
									ButtonColor="ButtonColor.Primary"
									ButtonSize="ButtonSize.Small">
						<TextTemplate>
							<i class="bi bi-folder2" title="Tab Rendering Mode..." aria-hidden="true"></i>
						</TextTemplate>
						<ChildContent>
							<DropdownItemButton Value="TabsRenderMode.Default">
								<InteractiveTemplate Context="modeDefault">
									<div class="d-flex">
										<span class="ms-2">@TabsRenderMode.Default.ToString()</span>
										@if (modeDefault.IsActive) {
											<i class="bi bi-check ms-auto"></i>
										}
									</div>
								</InteractiveTemplate>
							</DropdownItemButton>
							<DropdownItemButton Value="TabsRenderMode.LazyLoad">
								<InteractiveTemplate Context="modeLazyLoad">
									<div class="d-flex">
										<span class="ms-2">@TabsRenderMode.LazyLoad.ToString()</span>
										@if (modeLazyLoad.IsActive) {
											<i class="bi bi-check ms-auto"></i>
										}
									</div>
								</InteractiveTemplate>
							</DropdownItemButton>
							<DropdownItemButton Value="TabsRenderMode.LazyReload">
								<InteractiveTemplate Context="modeLazyReload">
									<div class="d-flex">
										<span class="ms-2">@TabsRenderMode.LazyReload.ToString()</span>
										@if (modeLazyReload.IsActive) {
											<i class="bi bi-check ms-auto"></i>
										}
									</div>
								</InteractiveTemplate>
							</DropdownItemButton>
						</ChildContent>
					</DropdownButton>
				</div>
				<div class="bs-component">
					<Tabs RenderMode="@TabRenderModeState.TabsRenderMode" OverflowMode="@SelectedOverflowMode">
						<Tab Name="Detail">
							<div class="p-3">
								<Detail />
							</div>
						</Tab>
						<Tab Name="ShowCase">
							<div class="p-3">
								<SimpleGrid />
							</div>
						</Tab>
					</Tabs>
				</div>
			</div>
		</div>

