									IsDropMenu="false"
									Text="@($"{SelectedOverflowMode}")"
									@bind-SelectedValue="@SelectedOverflowMode">
						@foreach (var mode in Enum.GetValues<TabsOverflowMode>()) {
							<DropdownItemButton Value="mode">
								<InteractiveTemplate Context="modeContext">
									<div class="d-flex">
										@mode.ToString()
										@if (modeContext.IsActive) {
											<i class="bi bi-check ms-auto"></i>
										}
										@if (modeContext.IsDisabled) {
											<i class="bi bi-ban ms-auto"></i>
										}
									</div>
								</InteractiveTemplate>
							</DropdownItemButton>
						}
					</DropdownButton>
				</fieldset>
